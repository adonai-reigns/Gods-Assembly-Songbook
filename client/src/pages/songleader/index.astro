---
import GasLayout from "../../layouts/gas.astro";
---

<GasLayout>
    <p class="subtitle">What is your service today?</p>
    <div class="screens grid justify-content-evenly">
        <div
            class="screen songleader col-12 md:col-3 my-3 lg:flex lg:flex-column-reverse"
        >
            <h2 class="m-0 md:mb-3 p-0 lg:mt-5 lg:mb-0">
                <a href="/songleader/plan">Plan Playlists</a>
            </h2>
            <div class="text-center">
                <img
                    class="w-10 ls:w-12"
                    src="/images/vecteezy_hand-holding-pen-and-clipboard-with-plan-checklist-flat-design-vector-with-space-for-use-as-poster-or-banner_464142/handillus_27-scaled.jpg"
                    alt="Picture of a Checklist"
                />
            </div>
        </div>
        <div
            class="screen composer col-12 md:col-3 my-3 lg:flex lg:flex-column-reverse text-center"
        >
            <h2 class="m-0 md:mb-3 p-0 lg:mt-5 lg:mb-0">
                <a href="/admin/songs">Update Songs</a>
            </h2>
            <div class="text-center">
                <img
                    class="w-10 ls:w-12"
                    src="/images/vecteezy_paper-business-contract-pen-signature-vector-icon_546602/contracts_002-scaled.jpg"
                    alt="Picture of a pen and a piece of paper"
                />
            </div>
        </div>
        <div
            class="screen composer col-12 md:col-3 my-3 lg:flex lg:flex-column-reverse text-center"
        >
            <h2 class="m-0 md:mb-3 p-0 lg:mt-5 lg:mb-0">
                <a href="/songleader/sing">Let's Sing!</a>
            </h2>
            <div class="text-center">
                <img
                    class="w-10 ls:w-12"
                    src="/images/vecteezy_children-playing-various-music-instrument-illustration_2268105/children_playing_music_and_instrument_generated-scaled.jpg"
                    alt="Picture of three people singing with musical instruments"
                />
            </div>
        </div>
    </div>

    <script>
        document.querySelectorAll(".screens .screen").forEach((screen) => {
            // make the container element a clickable link
            screen.addEventListener("click", (e) => {
                e.preventDefault();
                window.location.href =
                    screen.querySelector("h2 a")?.getAttribute("href") ??
                    window.location.href;
            });
        });
    </script>
</GasLayout>

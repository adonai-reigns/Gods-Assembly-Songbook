---
import GasLayout from "../layouts/gas.astro";

import { Card } from "primereact/card";

---

<style is:inline>
    .attributions {
        grid-auto-rows: 1fr;
    }
    .attribution .p-card-title {
        text-align: center;
    }
    .attribution .p-card-body {
        height: 100%;
    }
    .attribution .p-card-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .attribution-image {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        height: 70%;
        width: 100%;
        text-align: center;
    }
    .attribution-image img {
        max-width: 100%;
        max-height: 100%;
        width: 100%;
        height: auto;
        align-self: center;
    }
    .attribution-caption {
        height: 30%;
        width: 100%;
        padding: 1em;
        text-align: center;
    }
    .attribution-caption a {
        font-weight: bold;
        color: inherit;
        text-decoration: none;
    }

    .attribution-caption a:hover {
        text-decoration: underline;
    }

    @media screen and (min-width: 2000px) {
        /* xl screen size */
        p,
        .attribution-caption {
            font-size: 1.5rem;
        }

        .attribution .p-card-title {
            font-size: 2rem;
        }
    }
</style>
